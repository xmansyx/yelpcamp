<% include ../partials/_header %>
<div class="container pt-2">
    <div class="row justify-content-md-center">
        <div class="col-md-6 ">
            <h2>add new campground</h2>

            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" placeholder="name">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]"> </textarea>
                </div>
                <input type="submit" value="submit" class="btn btn-large btn-primary btn-blcok">
            </form>
        </div>
    </div>

</div>

